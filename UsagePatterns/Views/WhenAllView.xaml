<UserControl x:Class="AsyncWorkshop.UsagePatterns.Views.WhenAllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             DataContext="{StaticResource WhenAllViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Button Height="30" Margin="5" Padding="5" Command="{Binding ExecuteWhenAllCommand}" Style="{StaticResource DisappearableButton}">Download all files</Button>
        <Button Height="30" Margin="5" Padding="5" Command="{Binding CancelWhenAllCommand}" Style="{StaticResource DisappearableButton}">Cancel download</Button>
        <ProgressBar
            x:Name="ProgressBarWhenAll"
            Height="30" Width="380"
            Value="{Binding WhenAllProgressPercentage, Mode=OneWay}"/>
    </StackPanel>
</UserControl>
